<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div>
  <%= f.label :gender %>
  <%= f.radio_button :gender, 1 %>男
  <%= f.radio_button :gender, 2 %>女<br />
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :grade %><br />
    <%= f.text_field :grade %>
  </div>

  <div class="field">
    <%= f.label :school %><br />
    <%= f.text_field :school %>
  </div>

  <div class="field">
    <%= f.label :undergraduate %><br />
    <%= f.text_field :undergraduate %>
  </div>
    
  <div class="field">
    <%= f.label :self_introduction %><br />
    <%= f.text_field :self_introduction %>
  </div>

  <div class="field">
    <%= f.label :work_location %><br />
    <%= f.text_field :work_location %>
  </div>

  <div class="field">
    <%= f.label :hobby %><br />
    <%= f.text_field :hobby %>
  </div>

  <div class="field">
    <%= f.label :birthplace %><br />
    <%= f.text_field :birthplace %>
  </div>

  <div class="field">
    <%= f.label :job_category %><br />
    <%= f.text_field :job_category %>
  </div>

  <div class="field">
    <%= f.label :circle %><br />
    <%= f.text_field :circle %>
  </div>

  <div class="field">
    <%= f.label :seminar %><br />
    <%= f.text_field :seminar %>
  </div>

  <div class="field">
    <%= f.label :high_school %><br />
    <%= f.text_field :high_school %>
  </div>

  <div class="field">
    <%= f.label :part_time_job %><br />
    <%= f.text_field :part_time_job %>
  </div>

  <div class="field">
    <%= f.label :club %><br />
    <%= f.text_field :club %>
  </div>

  <div class="field">
    <%= f.label :department %><br />
    <%= f.text_field :department %>
  </div>

  <div class="field">
    <%= f.label :profile_image %><br />
    <%= f.text_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.text_field :birthday %>
  </div>




  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
