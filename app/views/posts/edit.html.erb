<h1>投稿編集</h1>
<% if student_signed_in? %>
  <%= form_for (@post) do |f| %>
    <h2>本文</h2>
    <%= f.label :text %>
    <%= f.text_field :text %>
    <%= f.hidden_field :student_id, value: current_student.id %>
    <%= f.submit "保存する" %>
  <% end %>
  <%= link_to "戻る", students_mypage_path %>
<% elsif company_signed_in? %>
  <%= form_for (@post) do |f| %>
    <h2>本文</h2>
    <%= f.label :text %>
    <%= f.text_field :text %> 
    <%= f.hidden_field :company_id, value: current_company.id %>
    <%= f.submit "保存する" %>
  <% end %>
<%= link_to "戻る", companies_mypage_path %>
<% end %>